<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- Icon shown next to the title/subtitle -->
    <ImageView
            android:id="@+id/audio_file_entry_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="3dp" />

    <!-- Title of the news entry -->
    <TextView
            android:id="@+id/audio_file_entry_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/audio_file_entry_icon"
            android:layout_alignTop="@id/audio_file_entry_icon"
            android:layout_margin="5dp"
            android:textSize="14sp"
            android:textStyle="bold" />

    <!-- Subtitle contains artist and date -->
    <TextView
            android:id="@+id/audio_file_entry_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/audio_file_entry_title"
            android:layout_below="@id/audio_file_entry_title"
            android:textSize="12sp" />

</RelativeLayout>