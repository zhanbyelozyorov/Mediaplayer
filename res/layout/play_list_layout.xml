<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ListView
            android:id="@+id/playListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:headerDividersEnabled="false" android:layout_weight="100">
    </ListView>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewOfSong"
            android:layout_weight="0.1"
            android:src="@drawable/ic_volume_up_black_48dp"
            android:background="#ffe9e9e9"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/song_title"
            android:gravity="top|center_horizontal"
            android:textColor="#ff000000"
            android:layout_weight="0.2"
            android:background="#ffe9e9e9"/>
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_weight="0.2"
            android:indeterminate="false"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/time_played"
                android:layout_weight="40"
                android:gravity="center_horizontal"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonRepeat"
                android:src="@drawable/ic_repeat_black_48dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="20"
                android:layout_gravity="center_horizontal"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonShuffle"
                android:src="@drawable/ic_local_dining_black_48dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="20"
                android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/total_running_time"
                android:layout_weight="40"
                android:gravity="center_horizontal" android:phoneNumber="true"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center_horizontal">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonPrevious"
                android:src="@drawable/ic_skip_previous_black_48dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="25"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonPlay"
                android:src="@drawable/ic_play_arrow_black_48dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="25"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonStop"
                android:src="@drawable/ic_stop_black_48dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="25"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonNext"
                android:src="@drawable/ic_skip_next_black_48dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="25"/>
    </LinearLayout>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DIRECTORY SELECTION"
            android:id="@+id/to_navigator_button"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="buttonClick"
            android:layout_weight="0.2"
            android:background="#ffc8c8c8"/>

</LinearLayout>